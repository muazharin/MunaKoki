<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gambar2"
    tools:context="com.example.android.munakoki.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:text="Muna Koki"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#07c41d"
            android:textSize="50sp" />

        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/a"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kumpulan resep makanan \nkhas \nkabupaten muna"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#07c41d"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Mulai"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Created by Muazharin Alfan"
            android:textColor="#07c41d"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

</ScrollView>