<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gambar3"
    tools:context="com.example.android.munakoki.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_marginTop="30dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/c"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:text="Menu"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:textSize="40sp" />

        <Button
            android:id="@+id/btn_kabuto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kabuto"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/btn_kambuse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kambuse"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/btn_katumbu_gola"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Katumbu gola"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/btn_kambewe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kambewe"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/btn_kasoami"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kasoami"
            android:layout_gravity="center"/>

    </LinearLayout>



</ScrollView>